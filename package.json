{
  "name": "workflow-lib",
  "version": "1.0.0",
  "description": "Workflow engine based on BPMNs. Designed for developers.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "tslint -p tsconfig.json",
    "doc": "typedoc --out docs src",
    "prepare": "npm run build",
    "example": "node -r tsconfig-paths/register -r ts-node/register example/example.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenexo/workflow-lib.git"
  },
  "keywords": [
    "bpmn-engin",
    "workflow"
  ],
  "author": "Vahid V.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenexo/workflow-lib/issues"
  },
  "homepage": "https://github.com/wenexo/workflow-lib#readme",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>/"
    ],
    "testRegex": "[.]spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
